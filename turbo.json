{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [
    ".env",
    ".env.local"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".vitepress/dist/**",
        "dist/**"
      ]
    },
    "dev-remote": {
      "dotEnv": [
        ".env"
      ]
    },
    "dev": {
      "dotEnv": [
        ".env.local"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "db:start": {
      "cache": false
    },
    "db:stop": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:gen-types": {},
    "lint": {
      "cache": false
    }
  }
}